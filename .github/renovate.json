{
  "extends": ["config:best-practices", ":disableRateLimiting"],
  "automerge": false,
  "automergeType": "pr",
  "packageRules": [
    {
      "matchManagers": ["github-actions", "pip_requirements"],
      "automerge": true,
      "automergeType": "pr"
    },
    {
      "matchManagers": ["custom.regex"],
      "matchDepNames": ["python/cpython"],
      "automerge": true,
      "automergeType": "pr"
    },
    {
      "matchManagers": ["ansible-galaxy"],
      "automerge": false
    }
  ],
  "enabledManagers": ["github-actions", "pip_requirements"],
  "assignees": ["pluggero"],
  "customManagers": [
    {
      "customType": "regex",
      "managerFilePatterns": [
        "\\.github/workflows/.+\\.ya?ml$"
      ],
      "matchStrings": [
        "python-version:\\s+[\"'](?<currentValue>\\d+\\.\\d+)[\"']"
      ],
      "datasourceTemplate": "github-tags",
      "depNameTemplate": "python/cpython",
      "versioningTemplate": "semver"
    }
  ]
}
